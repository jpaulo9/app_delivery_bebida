<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6"
    tools:context=".Pedir_Bebida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/layout_cardrds">


            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView58" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/B_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/textView57"
                android:layout_toRightOf="@id/textView58"
                app:srcCompat="@drawable/ic_baseline_local_bar1_24" />

            <TextView
                android:id="@+id/B_titlebebida"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/textView57"
                android:layout_toRightOf="@id/B_image"
                android:gravity="center"
                android:text="   Título_Bebida"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/B_image" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/layout_cardrds">


            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView52"
                android:text="  Valor unitário:  " />

            <TextView
                android:id="@+id/B_valor_unidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView52"
                android:layout_toRightOf="@id/textView43"
                android:text="R$ valor           "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/B_menor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView52"
                android:layout_toRightOf="@id/B_valor_unidade"
                android:drawableTop="@drawable/ic_baseline_remove_circle_24" />

            <TextView
                android:id="@+id/B_unidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView52"
                android:layout_toRightOf="@id/B_menor"
                android:text="     1     "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/B_maior"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView52"
                android:layout_toRightOf="@id/B_unidade"
                android:drawableTop="@drawable/ic_baseline_add_circle_24" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/B_maior"
                android:background="#CDCDCD" />

            <TextView
                android:id="@+id/B_totalpago"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/view"
                android:gravity="center"
                android:text="  Total: R$ 120,00"
                android:textColor="#6BED0F"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/B_totalpago" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add_pedido"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radius_bottomfc"
            android:text="Enviar Pedido"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_vot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableBottom="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</ScrollView>